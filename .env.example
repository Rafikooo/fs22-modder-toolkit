# FS22 Modder Toolkit Pipeline Configuration
# Copy this file to .env.local and customize for your setup:
#   cp .env.example .env.local

# GitHub deployment (for documentation site)
GITHUB_USER="<your-github-username>"
GITHUB_REPO="fs22-modder-toolkit"

# Input: Latest runtime export
# Leave empty to auto-detect latest session
EXPORT_SESSION=""

# Filter: Leave empty to process ALL globals and depths
# For development: set specific global/depth to test pipeline quickly
EXPORT_GLOBAL=""  # Empty = all globals, or set "g_currentMission" for single global
EXPORT_DEPTH=""   # Empty = all depths (1,2,3), or set "3" for single depth

# Paths (relative to repo root)
RUNTIME_SCHEMAS_DIR="data/schemas"
JSON_OUTPUT_DIR="data/json"
STUBS_OUTPUT_DIR="data/stubs"
DOCS_OUTPUT_DIR="docs"
ENGINE_SIGS_INPUT="fs22-data-source/scriptBinding.xml"
ENGINE_SIGS_OUTPUT="data/engine-signatures/fs22-engine-functions.lua"

# Feature toggles
RUN_JSON_CONVERSION=true
RUN_LUA_STUBS=true
RUN_DOCS_GENERATION=true
RUN_ENGINE_SIGNATURES=false  # Only if scriptBinding.xml exists
INSTALL_DOCS_DEPS=true
BUILD_DOCS_SITE=false
SERVE_DOCS_LOCALLY=false

VERBOSE=true
